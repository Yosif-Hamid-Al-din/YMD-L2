<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <script src="../js/color-modes.js"></script>
    <link
      rel="stylesheet"
      href="../bootstrap-icons-1.10.5/font/bootstrap-icons.min.css"
    />
    <link rel="shortcut icon" href="../img/yosif.png" type="image/x-icon">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta
      name="author"
      content="Mark Otto, Jacob Thornton, and Bootstrap contributors"
    />
    <meta name="generator" content="Hugo 0.112.5" />
    <title>Edit page</title>

    <link href="../css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="../css/dark-light.css">


    <!-- Custom styles for this template -->
    <link href="../css/sidebars.css" rel="stylesheet" />
    <link rel="stylesheet" href="../css/myStyle.css" />
  </head>
  <body>
    <%- include('../Components/dark-light.ejs') %>

    <main class="d-flex flex-nowrap">
      <%- include('../Components/sidebar.ejs', {currentPage: "edit"}) %>


      <section class="w-100">
        <%- include('../Components/navbar.ejs') %>


        <nav class="px-2 mt-4 d-flex flex-wrap justify-content-between" aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= obj.firseName %> <%= obj.lastName %></li>
          </ol>
          <p class="me-md-3"><span class="fw-medium fs-5">Id:</span> <%= obj._id %></p>
        </nav>
      
      
        <form action="/edit/<%= obj._id %>?_method=PUT" method="post" class="row gx-3 gy-4 mt-1 mx-0">
          
          <div class="col-md-6">
            <label for="inputfirstname" class="form-label">First Name</label>
            <input type="text" name="firseName" class="form-control" id="inputfirstname" value="<%= obj.firseName %>">
          </div>
          <div class="col-md-6">
            <label for="inputlastname" class="form-label">Last Name</label>
            <input type="text" name="lastName" class="form-control" id="inputlastname" value="<%= obj.lastName %>">
          </div>
      
      
      
          <div class="col-md-6">
            <label for="inputemail" class="form-label">Email</label>
            <input type="email" name="email" class="form-control" id="inputemail" value="<%= obj.email %>">
          </div>
          <div class="col-md-6">
            <label for="Telephone" class="form-label">Telephone</label>
            <input type="number" name="phoneNumber" class="form-control" id="Telephone" value="<%= obj.phoneNumber %>">
          </div>
      
          <div class="col-md-6">
              <label for="age" class="form-label">Age</label>
              <input type="number" name="age" class="form-control" id="age" value="<%= obj.age %>">
            </div>
      
          <div class="col-md-6">
              <label for="inputGender" class="form-label">Gender</label>
              <select id="inputGender" name="gender" class="form-select">
                <option selected hidden>Choose here ...</option>
                <option <%= "Male"=== obj.gender ? "selected" : null %> >Male</option>
                <option <%= "Famale"=== obj.gender ? "selected" : null %>>Famale</option>
              </select>
          </div>
      
         
          <div class="col-12">
            <label for="inputcountry" class="form-label">Country</label>
            <select name="country" id="inputcountry" class="form-select" >
              <option selected hidden>Choose here ...</option>
              <option <%= "Yemen"=== obj.country ? "selected" : null %> >Yemen</option>
              <option <%= "Other"=== obj.country ? "selected": null  %>>Other..</option>
            </select>
          </div>
      <div style="justify-content: space-between;" class="d-md-flex ">
          <div class="col-md-6">
            <button type="submit" class="btn btn-primary mt-3">Update</button>
          </div>
          <div class="col-md-3">
            
          </div>
        </div>
        </form>
      
      </section>

      <!-- Modal -->
     
    </main>
    <script src="../js/bootstrap.bundle.min.js"></script>

    <script src="../js/sidebars.js"></script>
    <script src="../js/main.js"></script>
  </body>
</html>
