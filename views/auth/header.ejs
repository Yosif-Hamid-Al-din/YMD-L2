<header class="mb-auto">
  <!--align-items-center-->
  <div class="d-flex justify-content-between align-items-center">
    <h3 class="float-md-start mb-0">
      <a href="/" class="btn fs-2 text-white fw-bold">YMD<sup class="mx-1">2</sup></a>
    </h3>
    <% if (user !== null) { %>
      <div class="d-flex align-items-center">
      <p class="m-0 me-2">Welcome: <%= user.username %></p>
      <a class="fw-bold btn btn-light" href="/signout">Sing out</a>
    </div>
     <% }else{ %>
   
    <nav class="nav nav-masthead justify-content-center float-md-end">
      <a class="fw-bold btn <%= currentPage == "login" ? "btn-light" : null %>" href="/login">Log in</a>
      <a class="fw-bold btn <%= currentPage == "signup" ? "btn-light" : null %>" href="/signup">Sing up</a>
    </nav>
    <% } %>
  </div>
</header>